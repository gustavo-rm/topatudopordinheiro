
<%= form_with(model: notice, local: true) do |form| %>
  <% if notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

      <ul>
      <% notice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div style="display: inline-block; width: 25%; padding-left: 1em;">
  <div class="field form-group" style="text-align: left;">
    <%= form.label :subject %>
    <%= form.text_field :subject, :class => "form-control", :placeholder => "Assunto" %>
  </div>

  <div class="field form-group" style="text-align: left;">
    <%= form.label :text %>
    <%= form.text_field :text, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-outline-success form-control' %>
  </div>
</div>
<% end %>
