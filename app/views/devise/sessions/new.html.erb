<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  
  <img class="mb-4" src="https://image.flaticon.com/icons/svg/149/149452.svg" alt="" width="72" height="72">
  <h2 class="h3 mb-3 font-weight-normal">Identifique-se</h2>
    <div style="display: inline-block; width: 25%">
      <%= f.label :email, :class => "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
      <%= f.label :password, :class => "sr-only" %>
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", :placeholder => "Senha" %>  
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field" style="padding-top: 1em;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", :class => "btn btn-outline-primary button" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>